{% extends 'base.html.twig' %}

{% block body %}
    <div class="score-all">
        <div class="text-form">Please, complete<br>the following fields<br>to participate</div>
        <form method="POST" action="{{path('traitement')}}">
            <input type="text" name="name" required placeholder="Name">
            <input type="text" name="surname" required placeholder="Surname">
            <input type="email" name="email" required placeholder="Email">
            <input type="number" name="phone" required placeholder="Phone number">
            <input type="submit" value="Send">
        </form>
    </div>
{%endblock%}

{% block javascripts %}
    <script>
        $(".bottom").addClass("red");
    </script>
{% endblock %}